<% if @range == "User" %>
    <h3>Users search for "<%= @word %>"</h3>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>name</th>
                <th>introduction</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
                    <td>
                        <%= link_to user_path(user.id) do %>
                            <%= user.name %>
                        <% end %>
                    </td>
                    <td><%= user.introduction %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <h3>Books search for "<%= @word %>"</h3>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>name</th>
                <th>introduction</th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
                    <td>
                        <%= link_to book_path(book.id) do %>
                            <%= book.title %>
                        <% end %>
                    </td>
                    <td><%= book.body %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>
