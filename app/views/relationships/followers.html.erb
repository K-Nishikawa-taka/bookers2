<h2>Follower Users</h2>
<% if @user.followers.exists? %>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @user.followers.each do |follower| %>
        <tr>
          <td><%= attachment_image_tag follower, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= follower.name %></td>
          <td>フォロー数: <%= follower.followings.count %></td>
          <td>フォロワー数: <%= follower.followers.count %></td>
          <td><%= link_to 'show', user_path(follower.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>