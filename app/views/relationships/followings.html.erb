<h2>Follow Users</h2>
<% if @user.followings.exists? %>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @user.followings.each do |follow| %>
        <tr>
          <td><%= attachment_image_tag follow, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= follow.name %></td>
          <td>フォロー数: <%= follow.followings.count %></td>
          <td>フォロワー数: <%= follow.followers.count %></td>
          <td><%= link_to 'show', user_path(follow.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>