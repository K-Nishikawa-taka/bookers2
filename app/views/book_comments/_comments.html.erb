<table>
  <% book.book_comments.each do |comment| %>
    <tr>
      <td>
        <%= attachment_image_tag comment.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
      </td>
      <td>
        <%= comment.comment %>
      </td>
      <td>
        <% if comment.user_id == current_user.id %>
          <%= link_to "Destroy", book_book_comment_path(comment.book, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to user_path(book.user.id) do %>
          <%= book.user.name %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>