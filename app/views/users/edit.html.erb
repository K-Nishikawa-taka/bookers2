<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div id="error_explanation">
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <% @user.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        <% end %>
      </div>
      
      <%= form_with model: @user, local:true do |f| %>
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, id:"inputName", class: "form-control name" %><br>
        <label for="inputImage">Image</label><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file image" %><br>
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_area :introduction, id:"inputIntroduction", class: "form-control introduction" %><br>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
