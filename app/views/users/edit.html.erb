<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %> errors prohibited this obj from being saved:
        <% @user.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      <% end %>
      
      <%= form_with model: @user, local:true do |f| %>
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, id:"inputName" %><br>
        <label for="inputImage">Image</label><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_area :introduction, id:"inputIntroduction" %><br>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
